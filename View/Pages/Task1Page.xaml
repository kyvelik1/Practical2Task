<Page x:Class="WpfApp4.View.Pages.Task1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp4.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task1Page"
      Background="Black">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 20 0 0">
            <TextBlock Text="Задание 1"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="White"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="30 23 0 0">
            <Button Content="Назад"
                    Padding="5"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnBack1"
                    Click="BtnBack1_Click"
                    Background="Transparent"
                    BorderBrush="Orange"
                    Foreground="{Binding ElementName=BtnBack1, Path=BorderBrush}"
                    BorderThickness="1"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 30 20">
            <Button Content="Задание 2"
                    Padding="5"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnTask2"
                    Click="BtnTask2_Click"
                    Background="Transparent"
                    BorderBrush="Green"
                    Foreground="{Binding ElementName=BtnTask2, Path=BorderBrush}"
                    BorderThickness="1"/>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 390 30">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите y"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 3 0"
                           Foreground="White"/>
                <TextBox x:Name="TbY"
                         Width="110"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="290 0 0 30">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите f"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0 0 5 0"
                           Foreground="White"/>
                <TextBox x:Name="TbF"
                         Width="110"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 100 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="18"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Background="Transparent"
                    BorderBrush="Purple"
                    Foreground="{Binding ElementName=BtnAns, Path=BorderBrush}"
                    BorderThickness="1"/>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 0 0 120">
            <TextBlock Text="Результат"
                       FontSize="20"
                       FontWeight="Bold"
                       x:Name="TbG"
                       Foreground="White"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0 23 30 0">
            <Button Content="На главную"
            Padding="5"
            FontSize="15"
            FontWeight="Bold"
            Cursor="Hand"
            x:Name="BtnOnMain"
            Click="BtnOnMain_Click"
            Background="Transparent"
            BorderBrush="Orange"
            Foreground="{Binding ElementName=BtnOnMain, Path=BorderBrush}"
            BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Page>
